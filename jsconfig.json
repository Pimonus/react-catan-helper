{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@images/*": [
                "./src/assets/images/*"
            ],
            "@core/*": [
                "./src/core/*"
            ],
            "@flow/*": [
                "./src/flow/*"
            ],
            "@board/*": [
                "./src/board/*"
            ],
            "@modules/*": [
                "./src/board/modules/*"
            ],
            "@redux/*": [
                "./src/redux/*"
            ],
            "@actions/*": [
                "./src/redux/actions/*"
            ],
            "@reducers/*": [
                "./src/redux/reducers/*"
            ],
            "@store/*": [
                "./src/redux/store/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}